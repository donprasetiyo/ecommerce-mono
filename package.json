{
  "name": "don-ecommerce-mono",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:all": "turbo clean",
    "db:push": "pnpm -F db push",
    "db:studio": "pnpm -F db studio",
    "dev": "turbo dev --parallel",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "typecheck": "turbo typecheck",
    "changeset": "changeset",
    "version:packages": "changeset version",
    "dev:api": "turbo watch dev --filter=api",
    "watch:api": "turbo watch build --filter=@repo/validators --filter=@repo/trpc --filter=@repo/shared-types --filter=@repo/logging --filter=@repo/lib --filter=@repo/database --filter=@repo/auth --filter=@repo/features --filter=@repo/api",
    "prisma": "pnpm -C packages/database prisma",
    "ui:add": "pnpm --filter @repo/ui ui:add",
    "web:push": "pnpm --filter web push"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@turbo/gen": "1.12.2",
    "prettier": "^3.1.1",
    "turbo": "^2.0.7",
    "typescript": "^5.3.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "prettier": "@repo/prettier-config"
}